{
  "compilerOptions": {
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, 
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2019",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
